<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"

tools:context="com.example.eric.restless.DevPMSelectionActivity">


    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@android:drawable/ic_menu_manage"
        android:id="@+id/editProfile"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:onClick="editProfileMethod"
        android:layout_alignParentStart="true" />

    <Button
        android:text="P r o j e c t\nM a n a g e r"
        android:padding="10dp"
        android:background="@drawable/roundedbutton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pmButton"
        android:onClick="pmMethod"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/editProfile"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="D e v e l o p e r"
        android:background="@drawable/roundedbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/devButton"
        android:onClick="devMethod"
        android:layout_marginTop="180dp"
        android:layout_below="@+id/pmButton"
        android:layout_alignLeft="@+id/pmButton"
        android:layout_alignStart="@+id/pmButton"
        android:layout_alignRight="@+id/pmButton"
        android:layout_alignEnd="@+id/pmButton" />

</RelativeLayout>