<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eric.restless.manageMatchesPM">
    <TextView
        android:text="M a n a g e   M a t c h e s"
        android:background="@drawable/roundedheader"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:layout_marginTop="11dp"
        android:radius="20dp"
        android:id="@+id/newProject"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="30dp"
        android:layout_width="10dp"
        android:padding="4dp"
        android:textAlignment="viewEnd"
        android:gravity="end"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/matchList"
        android:background="#60FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="?attr/actionModeCloseDrawable"
        android:id="@+id/imageButton4"
        android:backgroundTint="#00000000"
        android:onClick="goBack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/newProject"
        android:layout_alignBottom="@+id/newProject" />

</RelativeLayout>
