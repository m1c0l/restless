<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"


    tools:context="com.example.eric.restless.signUp">


    <Button
        android:text="C o n t i n u e"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Continue"
        android:background="@drawable/roundedbutton"
        android:onClick="next"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:text="@string/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textAllCaps="false"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/emailflag"
        android:layout_alignTop="@+id/email"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@drawable/rounded_text"

        android:ems="10"
        android:id="@+id/username"
        android:maxLength="25"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:background="@drawable/rounded_text"
        android:ems="10"
        android:id="@+id/password"
        android:maxLength="16"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignLeft="@+id/passwordconfirm"
        android:layout_alignStart="@+id/passwordconfirm" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"

        android:background="@drawable/rounded_text"
        android:ems="10"
        android:id="@+id/passwordconfirm"
        android:maxLength="16"
        android:layout_marginTop="7dp"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignLeft="@+id/Continue"
        android:layout_alignStart="@+id/Continue" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_text"
        android:ems="10"
        android:id="@+id/phone"
        android:inputType="phone"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignLeft="@+id/passwordconfirm"
        android:layout_alignStart="@+id/passwordconfirm" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@drawable/rounded_text"
        android:ems="10"
        android:id="@+id/firstlastname"
        android:layout_alignTop="@+id/Name"
        android:layout_alignLeft="@+id/phone"
        android:layout_alignStart="@+id/phone" />

    <TextView
        android:text="GitHub Link\n(Optional)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="16dp"
        android:layout_below="@+id/wageVal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="23dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <TextView
        android:text="Wage ($) /hr:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:textSize="16dp"
        android:id="@+id/wage"
        android:layout_below="@+id/textView11"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <TextView
        android:text="City:"
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/firstlastname"
        android:layout_alignLeft="@+id/wage"
        android:layout_alignStart="@+id/wage"
        android:id="@+id/textView11"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <TextView
        android:text="Name:"
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:id="@id/Name"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <TextView
        android:text="Phone:"
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/Name"
        android:layout_alignStart="@+id/Name"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <TextView
        android:text="Confirm\nPassword:"
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/textView8"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <TextView
        android:text="Password:"
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/textView7"
        android:maxLength="16"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <TextView
        android:text="Username:"
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/email"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@drawable/rounded_text"
        android:ems="10"
        android:id="@+id/city"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignLeft="@+id/firstlastname"
        android:layout_alignStart="@+id/firstlastname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:background="@drawable/rounded_text"
        android:id="@+id/wageVal"
        android:maxLength="3"
        android:layout_alignBaseline="@+id/wage"
        android:layout_alignBottom="@+id/wage"
        android:layout_alignLeft="@+id/city"
        android:layout_alignStart="@+id/city" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/github"
        android:background="@drawable/rounded_text"
        android:layout_alignTop="@+id/textView"
        android:layout_alignLeft="@+id/wageVal"
        android:layout_alignStart="@+id/wageVal" />

    <TextView
        android:text="N e w    A c c o u n t"
        android:background="@drawable/roundedheader"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:radius="20dp"
        android:id="@+id/projectName"
        android:layout_height="30dp"
        android:layout_width="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/email"
        android:backgroundTintMode="src_atop"
        android:background="@drawable/rounded_text"
        android:maxLength="30"
        android:layout_below="@+id/projectName"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username" />

    <TextView
        android:text="Select Photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="20dp"
        android:id="@+id/textView15"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        android:id="@+id/imageButton"
        android:backgroundTint="#00000000"
        android:layout_below="@+id/github"
        android:layout_alignLeft="@+id/github"
        android:layout_alignStart="@+id/github"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp" />


</RelativeLayout>
